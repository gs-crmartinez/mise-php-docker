{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "listen",
      "port": 9003,
      "pathMappings": {
        "/app": "${workspaceFolder}"
      },
      "log": true
    },
    {
      "name": "Debug Current Script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "port": 9003,
      "pathMappings": {
        "/app": "${workspaceFolder}"
      },
      "runtimeExecutable": "php-debug"
    },
    {
      "name": "Debug PHPUnit Tests",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/vendor/bin/phpunit",
      "args": [
        "${input:testFilter}"
      ],
      "cwd": "${workspaceFolder}",
      "port": 9003,
      "pathMappings": {
        "/app": "${workspaceFolder}"
      },
      "env": {
        "XDEBUG_MODE": "debug"
      }
    }
  ],
  "inputs": [
    {
      "id": "testFilter",
      "type": "promptString",
      "description": "Test filter (leave empty for all tests)",
      "default": ""
    }
  ]
}
